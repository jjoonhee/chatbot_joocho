{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Hello, This is translation feature from english to Korean",
            "wrap": true
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "Input what you want to translate"
                }
            ]
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "id": "input_text",
            "value": "Text"
        },
        {
            "type": "ActionSet",
            "id": "text",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Translate!",
                    "data":{
                        "callback_keyword": "hey"
                    }
                }
            ]
        }
    ]
}